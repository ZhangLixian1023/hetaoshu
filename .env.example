# 环境变量配置示例
# 请复制此文件为.env并填写实际值
# 注意：不要将包含真实凭证的.env文件提交到代码仓库

# Django设置
SECRET_KEY=your_random_secret_key_here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your_domain.com
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000,https://your_frontend_domain.com

# 数据库设置
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DB_HOST=db
DB_PORT=3306

# Django超级用户设置（可选，会在容器启动时创建）
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your_secure_admin_password

# 邮件设置（生产环境需要配置真实的邮件服务器）
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=your_email@example.com